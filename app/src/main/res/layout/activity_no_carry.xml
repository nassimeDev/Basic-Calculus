<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://zschemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons"
            android:text=" Let take an example:
              246 + 642 = ? "
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="-55dp"
            android:background="@drawable/vocal"
            android:id="@+id/start"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:background="@drawable/buttons"
            android:text=" First of all we convert the operation as always to a vertical form:"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="-55dp"
            android:background="@drawable/vocal"
            android:id="@+id/first"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="
                        246"
            android:textColor="@color/DarkGoldenRod"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="
                     + 642"
            android:textColor="@color/DarkGoldenRod"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/buttons"
            android:text="
                     --------"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/buttons"
            android:text="
                     = ???"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:text=" After setting our operation, we start:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="-65dp"
            android:background="@drawable/vocal"
            android:id="@+id/afterSetting"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="
                        246"
            android:textColor="@color/DarkGoldenRod"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="
                     + 642"
            android:textColor="@color/DarkGoldenRod"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/buttons"
            android:text="
                     --------"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/buttons"
            android:text="
                     = ??8"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/buttons"
            android:text=" We add numbers that are in the same line: 6+2 = 8"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="-65dp"
            android:background="@drawable/vocal"
            android:id="@+id/weAdd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-45dp"
            android:background="@drawable/buttons"
            android:text="////// + // = ////////"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/warning"
            />
    </LinearLayout>
</ScrollView>